
{
  "root": true,
  "env": { "es2022": true, "browser": true, "node": true },
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "extends": ["eslint:recommended"],
  "rules": {
    "no-restricted-imports": ["error", {
      "patterns": [
        { "group": ["**/systems/combat/**"], "message": "Combat has been removed." },
        { "group": ["**/components/combat/**"], "message": "Combat UI has been removed." },
        { "group": ["**/systems/DeckManager"], "message": "Decks were part of the old loop." },
        { "group": ["**/data/cards"], "message": "Cards are not part of the pivot." },
        { "group": ["**/components/CardView*", "**/components/Hand*"], "message": "Card UI is gone." },
        { "group": ["**/systems/DataLoader.ts", "**/data/factions.ts", "**/core/ids.ts"], "message": "Legacy loaders and ID files are removed." }
      ]
    }]
  }
}
